#!/bin/dash
if test -e "$PWD/.girt" ; then
    echo "$0: error: .girt already exists" >&2
    exit 1
fi
mkdir -p $PWD/.girt/tmp $PWD/.girt/logs $PWD/.girt/objects/commit $PWD/.girt/objects/blob $PWD/.girt/refs/heads
touch $PWD/.girt/HEAD $PWD/.girt/index $PWD/.girt/commits
echo "Initialized empty girt repository in .girt"